<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Screen Title -->
    <TextView
        android:id="@+id/screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cat123"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/screen_title"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cat1"/>

    <!-- Posts, Followers, Following -->
    <TextView
        android:id="@+id/posts_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/profile_picture"
        android:layout_marginTop="70dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/posts_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:textSize="12sp"
        android:layout_below="@id/posts_count"
        android:layout_alignStart="@id/posts_count"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/followers_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/posts_count"
        android:layout_marginTop="70dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/followers_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:textSize="12sp"
        android:layout_below="@id/followers_count"
        android:layout_alignStart="@id/followers_count"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/following_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/followers_count"
        android:layout_marginTop="70dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/following_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following"
        android:textSize="12sp"
        android:layout_below="@id/following_count"
        android:layout_alignStart="@id/following_count"
        android:textColor="@android:color/black"/>

    <!-- Follow Button -->
    <Button
        android:id="@+id/follow_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Follow"
        android:layout_below="@id/profile_picture"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@android:color/holo_blue_light"/>

    <!-- Three pictures as posts -->
    <ImageView
        android:id="@+id/cat2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/follow_button"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/cat2"/>

    <ImageView
        android:id="@+id/cat3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/follow_button"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/cat2"
        android:src="@drawable/cat3"/>

    <ImageView
        android:id="@+id/cat4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/follow_button"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/cat3"
        android:src="@drawable/cat4"/>

</RelativeLayout>
